<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--  <Button
          android:id="@+id/btn_header_left"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:background="@drawable/arrow_left"
          android:src="@drawable/arrow_left" />-->

    <RelativeLayout
        android:id="@+id/btn_header_left"
        android:layout_width="@dimen/putao_title_bar_hight"
        android:layout_height="@dimen/putao_title_bar_hight"
        android:layout_centerVertical="true"

        android:background="@drawable/putao_list_selecter_transparent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:duplicateParentState="true"
            android:scaleType="center"
            android:src="@drawable/putao_icon_back" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题" />

        <TextView
            android:id="@+id/tv_header_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/btn_header_right"
        android:layout_width="@dimen/putao_title_bar_hight"
        android:layout_height="@dimen/putao_title_bar_hight"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/putao_list_selecter_transparent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imv_header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="center" />
    </RelativeLayout>


</RelativeLayout>
